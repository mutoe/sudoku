$color-line = #111
$color-dark = #282828
$color-light = #eee

*
  box-sizing inherit

html
body
  margin 0
  padding 0
  box-sizing border-box
  height 100%
  background $color-dark
  font-size 18px
  color $color-light
  overflow: hidden

body
  display flex
  flex-direction column
  justify-content flex-end
  max-width 640px
  min-width 360px
  margin 0 auto

header
  display flex
  flex-direction row
  justify-content space-around
  align-items center
  flex-grow 1

  .main-title
    margin 0

  .info-wrap
    display flex
    flex-direction column
    justify-content center

#gamearea
  position relative
  flex-shrink 0
  min-height 360px
  width 100%
  max-width 640px
  border 1px solid $color-line
  background $color-light

  canvas
    position absolute
    width calc(100% - 2px)

    &.act-layer
      background-color rgba(0, 0, 0, .2)
      opacity: 0
      transition opacity .1s

      &.active
        opacity: 1

footer
  display flex
  flex-wrap wrap
  flex-grow 1.5
  border 1px solid $color-line

  .btn
    box-sizing contain-box
    width 25%
    background transparent
    color #eee
    font-size 16px
    letter-spacing 1px
    border 1px solid $color-line
